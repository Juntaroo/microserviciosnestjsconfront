# ğŸ—ï¸ Etapa 1: Build de Angular
# ==============================
FROM node:20 AS build
WORKDIR /app

# Copiar dependencias e instalarlas
COPY package*.json ./
RUN npm install

# Copiar el resto del cÃ³digo
COPY . .

# Ir a la carpeta del proyecto Angular
WORKDIR /app/tpdesarrollowebfront

# Compilar Angular (produce /app/dist/tpdesarrollowebfront/browser)
RUN npm run build -- --configuration=production --output-path=/app/dist/tpdesarrollowebfront

# ==============================
# ğŸŒ Etapa 2: Servir con Nginx
# ==============================
FROM nginx:alpine

# ğŸ’£ BORRAR configuraciÃ³n por defecto (evita el â€œWelcome to nginxâ€)
RUN rm /etc/nginx/conf.d/default.conf

# ğŸ“„ Copiar tu configuraciÃ³n personalizada
COPY nginx.conf /etc/nginx/conf.d/default.conf

# ğŸ“¦ Copiar el build Angular al directorio correcto
COPY --from=build /app/dist/tpdesarrollowebfront/browser /usr/share/nginx/html/browser

# Exponer el puerto 80
EXPOSE 80

# ğŸš€ Comando principal
CMD ["nginx", "-g", "daemon off;"]
